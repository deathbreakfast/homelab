# Paperless-ngx Environment Configuration

# Database
PAPERLESS_DBNAME={{ paperless_db_name }}
PAPERLESS_DBUSER={{ paperless_db_user }}
PAPERLESS_DBPASS={{ paperless_db_password }}

# Security
PAPERLESS_SECRET_KEY={{ paperless_secret_key }}

# User Management
PAPERLESS_ADMIN_USER={{ paperless_superuser_name }}
PAPERLESS_ADMIN_MAIL={{ paperless_superuser_email }}
PAPERLESS_ADMIN_PASSWORD={{ paperless_superuser_password }}

# OCR Configuration
PAPERLESS_OCR_LANGUAGE={{ paperless_ocr_language }}
PAPERLESS_OCR_LANGUAGES={{ paperless_ocr_languages | join(',') }}

# Timezone
PAPERLESS_TIME_ZONE={{ paperless_timezone }}

# URL Configuration
PAPERLESS_URL=http://{{ ansible_default_ipv4.address }}:{{ paperless_port }}

# Redis
PAPERLESS_REDIS=redis://broker:6379

# Database Host
PAPERLESS_DBHOST=db
