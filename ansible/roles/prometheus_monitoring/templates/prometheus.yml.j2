global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  - "alert_rules.yml"

alerting:
  alertmanagers:
    - static_configs:
        - targets:
          - alertmanager:{{ alertmanager_port }}

scrape_configs:
  # Prometheus itself
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:{{ prometheus_port }}']

  # Node Exporter for system metrics
  - job_name: 'node-exporter'
    static_configs:
{% for target in monitoring_targets %}
      - targets: ['{{ target.host }}:{{ target.node_exporter_port }}']
        labels:
          instance: '{{ target.name }}'
          job: 'node-exporter'
{% endfor %}

  # Docker metrics
  - job_name: 'docker'
    static_configs:
{% for target in monitoring_targets %}
      - targets: ['{{ target.host }}:{{ target.docker_exporter_port }}']
        labels:
          instance: '{{ target.name }}'
          job: 'docker'
{% endfor %}

  # Loki metrics (if available)
  - job_name: 'loki'
    static_configs:
{% for target in monitoring_targets %}
      - targets: ['{{ target.host }}:3100']
        labels:
          instance: '{{ target.name }}'
          job: 'loki'
{% endfor %}

  # Paperless availability monitoring
  - job_name: 'paperless'
    metrics_path: /probe
    params:
      module: [http_2xx]
    static_configs:
{% for target in monitoring_targets %}
      - targets: ['{{ target.host }}:8000']
        labels:
          instance: '{{ target.name }}'
          job: 'paperless'
{% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: blackbox-exporter:9115

  # Backup metrics
  - job_name: 'backup-exporter'
    static_configs:
{% for target in monitoring_targets %}
      - targets: ['{{ target.host }}:{{ backup_exporter_port }}']
        labels:
          instance: '{{ target.name }}'
          job: 'backup-exporter'
{% endfor %}

  # Paperless GPT availability monitoring
  - job_name: 'paperless-gpt'
    metrics_path: /probe
    params:
      module: [http_2xx]
    static_configs:
{% for target in monitoring_targets %}
      - targets: ['{{ target.host }}:8080']
        labels:
          instance: '{{ target.name }}'
          job: 'paperless-gpt'
{% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: blackbox-exporter:9115
