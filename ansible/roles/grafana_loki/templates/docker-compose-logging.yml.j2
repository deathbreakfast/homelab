version: "3.8"

networks:
  logging:
    external: true
  monitoring:
    external: true

services:
{% if loki_enabled %}
  loki:
    image: grafana/loki:latest
    container_name: loki
    restart: unless-stopped
    ports:
      - "{{ loki_port }}:{{ loki_port }}"
    volumes:
      - {{ loki_data_dir }}:/loki
      - {{ loki_config_dir }}/loki-config.yml:/etc/loki/local-config.yaml
    command: -config.file=/etc/loki/local-config.yaml
    user: "1001:1001"
    environment:
      - LOKI_DATA_DIR=/loki
    networks:
      - logging
    deploy:
      resources:
        limits:
          memory: {{ loki_memory_limit }}
          cpus: '{{ loki_cpu_limit }}'
{% endif %}

{% if promtail_enabled %}
  promtail:
    image: grafana/promtail:latest
    container_name: promtail
    restart: unless-stopped
    volumes:
      - {{ promtail_config_dir }}/promtail-config.yml:/etc/promtail/config.yml
      - /var/log:/var/log:ro
      - /var/lib/docker/containers:/var/lib/docker/containers:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
    command: -config.file=/etc/promtail/config.yml
    networks:
      - logging
    depends_on:
      - loki
    deploy:
      resources:
        limits:
          memory: {{ promtail_memory_limit }}
          cpus: '{{ promtail_cpu_limit }}'
{% endif %}

{% if grafana_enabled %}
  grafana:
    image: grafana/grafana:latest
    container_name: grafana
    restart: unless-stopped
    ports:
      - "{{ grafana_port }}:3000"
    volumes:
      - {{ grafana_data_dir }}:/var/lib/grafana
      - {{ grafana_config_dir }}/grafana.ini:/etc/grafana/grafana.ini
    environment:
      - GF_SECURITY_ADMIN_USER={{ grafana_admin_user }}
      - GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_password }}
      - GF_USERS_ALLOW_SIGN_UP=false
      - GF_PATHS_DATA=/var/lib/grafana
    user: "1001:1001"
    networks:
      - logging
      - monitoring
    depends_on:
      - loki
    deploy:
      resources:
        limits:
          memory: {{ grafana_memory_limit }}
          cpus: '{{ grafana_cpu_limit }}'
{% endif %}
