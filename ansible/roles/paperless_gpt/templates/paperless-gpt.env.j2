# Paperless-GPT Environment Configuration

# LLM Configuration
LLM_PROVIDER={{ paperless_gpt_llm_provider }}
LLM_MODEL={{ paperless_gpt_llm_model }}

{% if paperless_gpt_llm_provider == "ollama" %}
OLLAMA_HOST={{ paperless_gpt_ollama_host }}
{% elif paperless_gpt_llm_provider == "openai" %}
OPENAI_API_KEY={{ paperless_gpt_openai_api_key }}
{% endif %}

# Paperless-ngx API Configuration
PAPERLESS_HOST={{ paperless_gpt_paperless_host }}
PAPERLESS_BASE_URL={{ paperless_gpt_paperless_host }}
PAPERLESS_API_TOKEN={{ paperless_gpt_paperless_api_token }}

# OCR Configuration
OCR_PROVIDER=llm
VISION_LLM_PROVIDER={{ paperless_gpt_vision_llm_provider }}
VISION_LLM_MODEL={{ paperless_gpt_vision_llm_model }}
OCR_LANGUAGE={{ paperless_gpt_ocr_language }}
OCR_LIMIT_PAGES={{ paperless_gpt_ocr_limit_pages }}

# Processing Configuration
TOKEN_LIMIT={{ paperless_gpt_token_limit }}
AUTO_PROCESS={{ paperless_gpt_auto_process | lower }}
ENHANCED_PDF={{ paperless_gpt_enhanced_pdf | lower }}
CREATE_LOCAL_PDF={{ paperless_gpt_create_local_pdf | lower }}
CREATE_LOCAL_HOCR={{ paperless_gpt_create_local_hocr | lower }}
PDF_REPLACE={{ paperless_gpt_pdf_replace | lower }}

{% if paperless_gpt_create_local_pdf %}
LOCAL_PDF_PATH={{ paperless_gpt_local_pdf_path }}
{% endif %}

{% if paperless_gpt_create_local_hocr %}
LOCAL_HOCR_PATH={{ paperless_gpt_local_hocr_path }}
{% endif %}

# System Configuration
TIMEZONE={{ paperless_gpt_timezone }}
LOG_LEVEL={{ paperless_gpt_log_level }}
